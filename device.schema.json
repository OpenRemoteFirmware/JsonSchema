{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "device.schema.json",
    "title": "OpenRemote Device schema",
    "description": "JSON schema for a device that can be controlled by the OpenRemote system.",
    "type": "object",
    "$defs": {
        "ioPort": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100
        },
        "ioPortsGroup": {
            "type": "object",
            "properties": {
                "hdmi": {
                    "$ref": "#/$defs/ioPort"
                }
            },
            "additionalProperties": false
        }
    },
    "properties": {
        "$schema": {
            "type": "string"
        },
        "id": {
            "description": "The unique identifier for this device. This is used to identify the device within the OpenRemote system.",
            "$ref": "shared.schema.json#uuid"
        },
        "parent": {
            "description": "The unique identifier for the parent device of this device, if applicable.",
            "$ref": "shared.schema.json#uuid"
        },
        "name": {
            "description": "Human readable name for this device.",
            "examples": [
                "Sony 55in OLED TV"
            ],
            "type": "string"
        },
        "description": {
            "description": "A more detailed description of this device and it's purpose.",
            "examples": [
                "Base device file for all Sony Google TVs"
            ],
            "type": "string"
        },
        "model": {
            "description": "Vendor model for this device.",
            "examples": [
                "KD-55A8H"
            ],
            "type": "string"
        },
        "vendor": {
            "description": "Vendor/Manufacturer for this device.",
            "examples": [
                "Sony"
            ],
            "type": "string"
        },
        "deviceCategory": {
            "description": "The type of device, e.g., TV, Light, Thermostat.",
            "enum": [
                "Base",
                "Display",
                "TV",
                "Audio",
                "Receiver",
                "SmartDevice",
                "Sensor",
                "Player",
                "MediaBox",
                "Light",
                "Other"
            ]
        },
        "cec": {
            "type": "object",
            "description": "CEC configuration for this device.",
            "properties": {
                "vendorId": {
                    "type": [
                        "integer",
                        "string"
                    ],
                    "description": "The CEC vendor ID for this device.",
                    "$ref": "shared.schema.json#hex24PosNum"
                }
            }
        },
        "inputs": {
            "$ref": "#/$defs/ioPortsGroup"
        },
        "outputs": {
            "$ref": "#/$defs/ioPortsGroup"
        },
        "actions": {
            "type": "object",
            "description": "A list of actions that can be performed on this device.",
            "patternProperties": {
                "^[A-Z][A-Z0-9_]+$": {
                    "type": "object",
                    "oneOf": [
                        {
                            "required": [
                                "NEC"
                            ]
                        },
                        {
                            "required": [
                                "NEC2"
                            ]
                        },
                        {
                            "required": [
                                "PRONTO"
                            ]
                        },
                        {
                            "not": {
                                "anyOf": [
                                    {
                                        "required": [
                                            "NEC"
                                        ]
                                    },
                                    {
                                        "required": [
                                            "NEC2"
                                        ]
                                    },
                                    {
                                        "required": [
                                            "PRONTO"
                                        ]
                                    }
                                ]
                            }
                        }
                    ],
                    "properties": {
                        "NEC": {
                            "type": "string",
                            "pattern": "^0x[0-9A-F]+$"
                        },
                        "NEC2": {
                            "type": "string",
                            "pattern": "^0x[0-9A-F]+$"
                        },
                        "PRONTO": {
                            "type": "string",
                            "pattern": "^([0-9A-Fa-f]{4}\\s?){6,}$"
                        }
                    },
                    "required": []
                }
            },
            "additionalProperties": false
        }
    },
    "required": [
        "id",
        "name"
    ],
    "additionalProperties": false
}