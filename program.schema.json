{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "OpenRemoteFirmware/program.schema.json",
    "title": "OpenRemote Program Schema",
    "description": "JSON schema for a program file used by the OpenRemote system.",
    "type": "object",
    "$defs": {
        "string_id": {
            "$comment": "this is used to identify devices and controlls across the program.",
            "type": "string",
            "pattern": "^[a-zA-Z0-9][a-zA-Z0-9_]+$",
            "description": "A string identifier.",
            "examples": [
                "device123",
                "Room_456"
            ]
        },
        "device": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "The name assigned to the device.",
                    "examples": [
                        "TV",
                        "Soundbar"
                    ]
                },
                "deviceId": {
                    "$ref": "shared.schema.json#uuid",
                    "description": "The unique identifier for the device."
                },
                "file": {
                    "type": "string",
                    "description": "An optional absolute or relative file path to the device configuration.",
                    "examples": [
                        "/path/to/device/config.json"
                    ]
                }
            },
            "required": [
                "name",
                "deviceId"
            ]
        },
        "devices": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z0-9][a-zA-Z0-9_]+$": {
                    "$ref": "#/$defs/device"
                }
            }
        },
        "controller": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "The name assigned to the controller.",
                    "examples": [
                        "Main Controller",
                        "Secondary Controller"
                    ]
                },
                "deviceId": {
                    "$ref": "shared.schema.json#uuid",
                    "description": "The unique identifier for the controller device."
                },
                "file": {
                    "type": "string",
                    "description": "An optional absolute or relative file path to the controller configuration.",
                    "examples": [
                        "/path/to/controller/config.json"
                    ]
                }
            },
            "required": [
                "name",
                "deviceId"
            ]
        },
        "controllers": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z0-9][a-zA-Z0-9_]+$": {
                    "$ref": "#/$defs/device"
                }
            }
        },
        "room": {
            "type": "object",
            "properties": {
                "devices": {
                    "$ref": "#/$defs/devices"
                },
                "controllers": {
                    "$ref": "#/$defs/controllers"
                }
            }
        },
        "required": [
            "devices",
            "controllers"
        ]
    },
    "properties": {
        "projectName": {
            "description": "The name of this project.",
            "type": "string",
            "examples": [
                "MY house",
                "John's summer house"
            ]
        },
        "version": {
            "description": "The version of the program being used.",
            "type": "integer",
            "minimum": 1,
            "$comment": "Increment this when the next version comes out.",
            "maximum": 2,
            "examples": [
                1
            ]
        },
        "rooms": {
            "description": "An array of room objects within the project.",
            "type": "object",
            "patternProperties": {
                "^[A-Z][A-Z0-9_]+$": {
                    "$ref": "#/$defs/room"
                }
            }
        }
    }
}