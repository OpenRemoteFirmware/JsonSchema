{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "OpenRemoteFirmware/program.schema.json",
    "title": "OpenRemote Program Schema",
    "description": "JSON schema for a program file used by the OpenRemote system.",
    "type": "object",
    "$defs": {
        "string_id": {
            "$comment": "this is used to identify devices and controlls across the program.",
            "type": "string",
            "pattern": "^[a-zA-Z0-9][a-zA-Z0-9_]+$",
            "description": "A string identifier.",
            "examples": [
                "device123",
                "Room_456"
            ]
        },
        "programs": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z0-9][a-zA-Z0-9_]+$": {
                    "type": "object",
                    "description": "A program assigned to this controller.",
                    "properties": {
                        "name": {
                            "type": "string",
                            "description": "The name of the program.",
                            "examples": [
                                "Power on",
                                "Volume up"
                            ]
                        },
                        "code": {
                            "type": "string",
                            "description": "The code this program contains."
                        }
                    },
                    "required": [
                        "code"
                    ],
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        },
        "deviceDefLink": {
            "$comment": "This allows either a straight up GUID to be used, or optionally a file pointer hint, and GUID.",
            "type": [
                "string",
                "object"
            ],
            "description": "Either a string identifier or a full device definition object.",
            "$ref": "shared.schema.json#uuidRegex",
            "properties": {
                "uuid": {
                    "$ref": "shared.schema.json#uuid"
                },
                "file": {
                    "type": "string"
                }
            },
            "required": [
                "uuid",
                "file"
            ]
        },
        "device": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "The name assigned to the device.",
                    "examples": [
                        "TV",
                        "Soundbar"
                    ]
                },
                "deviceId": {
                    "$ref": "#/$defs/deviceDefLink",
                    "description": "The unique identifier for the device."
                },
                "file": {
                    "type": "string",
                    "description": "An optional absolute or relative file path to the device configuration.",
                    "examples": [
                        "/path/to/device/config.json"
                    ]
                }
            },
            "required": [
                "name",
                "deviceId"
            ]
        },
        "devices": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z0-9][a-zA-Z0-9_]+$": {
                    "$ref": "#/$defs/device"
                }
            },
            "additionalProperties": false
        },
        "controller": {
            "$comment": "This is the schema that defines a device responsible for controlling other devices in the room.",
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "The name (usually human readable) assigned to the controller.",
                    "examples": [
                        "Main Controller",
                        "Secondary Controller"
                    ]
                },
                "deviceId": {
                    "$ref": "#/$defs/deviceDefLink",
                    "description": "The unique identifier for the device."
                },
                "required": [
                    "name",
                    "deviceId"
                ],
                "additionalProperties": false
            },
            "required": [
                "devices",
                "controllers"
            ]
        },
        "controllers": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z0-9][a-zA-Z0-9_]+$": {
                    "$ref": "#/$defs/device"
                }
            },
            "additionalProperties": false
        },
        "room": {
            "type": "object",
            "properties": {
                "devices": {
                    "$ref": "#/$defs/devices"
                },
                "controllers": {
                    "$ref": "#/$defs/controllers"
                },
                "programs": {
                    "$ref": "#/$defs/programs"
                }
            },
            "additionalProperties": false
        }
    },
    "properties": {
        "projectName": {
            "description": "The name of this project.",
            "type": "string",
            "examples": [
                "MY house",
                "John's summer house"
            ]
        },
        "version": {
            "description": "The version of the program being used.",
            "type": "integer",
            "minimum": 1,
            "$comment": "Increment this when the next version comes out.",
            "maximum": 2,
            "examples": [
                1
            ]
        },
        "rooms": {
            "description": "An array of room objects within the project.",
            "type": "object",
            "patternProperties": {
                "^[A-Za-z][A-Za-z0-9_]+$": {
                    "$ref": "#/$defs/room"
                }
            },
            "additionalProperties": false
        }
    }
}